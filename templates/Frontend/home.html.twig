{% extends 'base.html.twig' %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock title %}

{% block body  %}
    
        {% block header %}
            {{ parent() }}
        {% endblock header %}

        {# Titre personnalisé #}
        <div class="title_home_pimped">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="text-center" id="title_homepage_pimped">
                    <h1 class="title_name_pimped">Bienvenu "{{ app.user.username|title }}"</h1>
                    
                </div>
            {% else %}
            <div class="text-center" id="title_homepage_gaia_pimped">
                <h1 class="title_gaia_pimped">GAIA</h1>
            </div>
            {% endif %}
            <h5 class="subtitle_home"><em>Consommez des produits frais dans un rayon proche de chez vous</em></h5>
            {# Sous-titre pour le responsive #}
            <div id="slogan">
                <h4 id="title_slogan"><em>Le site d'échanges et de partages des amoureux des produits de la terre</em></h4 id="title_slogan">
            </div>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div id="icon_slogan">
                <span class="fa-stack fa-2x">
                    <i class="fas fa-circle fa-stack-2x" id="icon_circle"></i>
                    <i class="fas fa-hands-helping fa-stack-1x" id="icon_hands_helping"></i>
                </span>
            </div>
            {% endif %}
        </div>
        

        <div id="slider">
            <div id="pictures_homepage">
                <div id="page_accueil1" >

                    
                    <img src="./img/verdurebis.jpg" alt="Image en rotation 1" />

                </div>
                <div id="page_accueil2" >
                    <img src="./img/jardinage3bis.jpg" alt="Image en rotation 2" />

                </div>
            </div>
        </div>
        {# Liens affichés sous forme de liste listant les principales villes des membres #}
        <div class="container" id="list_towns">
            <div id="cities" class="row">
                <div class="col align-self-center">
                    <h2 id="title_cities" class="row justify-content-center">
                        Villes principales
                    </h2>
                </div>
                <div class="row">
                    <div class="col">
                        <ul class="list_cities">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            {% for advert in adverts %}
                                <li><a class="nav-link" href="{{ path('adverts_show', {'idAdvert': advert.idAdvert}) }}">{{ advert.town }}</a></li>
                            {% endfor %}
                            {% else %}
                                <h5 class="col justify-content-center" id="list_cities_no_connected">Pour accéder aux dernières annonces veuillez vous <em><a href="{{ path('security_login') }}">connecter</em></a> ou vous <em><a href="{{ path('inscription') }}">inscrire</em></a></h5>
                            {% endif %}
                        </ul>
                    </div>
                  
                </div>
            </div>
        </div>
    
{% endblock body %}