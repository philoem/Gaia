{% extends 'base.html.twig' %}

{% block title %}
    Contact - {{ parent() }}
{% endblock title %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock header %}
    

    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-sm-5">
                <div class="col-sm-12 col-lg-12">
                    <h3 class="text-center">Laissez-nous votre message</h3>
                    <div class="form-group">
                        <form class="form-horizontal" role="form" method="POST" action="{{ path('contact') }}">

                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="form-group col-sm-12">
                                <div class="row col-sm-12  justify-content-center" >
                                    
                                    <button type="reset" class="btn btn-warning">Effacer</button>
                                    <button type="submit" class="btn btn-success">Envoyer votre message</button>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                    {{ form_end(form) }}

                                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock body %}

