{% extends 'base.html.twig' %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock title %}

{% block body %}
    <div class="container">
        {% block header %}
            {{ parent() }}
        {% endblock header %}

        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="form-group col-sm-5">
                <div class="col-sm-12 col-lg-12">
                    <h3 class="text-center">Veuillez vous connecter</h3>

                    <div class="form-group">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate':'novalidate'}}) }}
                                        
                            
                        <div class="form-group col-sm-12">
                                {{ form_label(form.usernameLogin, "Votre pseudo :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_widget(form.usernameLogin, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        
                        <div class="form-group col-sm-12">
                                {{ form_label(form.password, "Votre mot de passe :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    
                        <div class="form-group col-sm-12">
                            <div class="row col-sm-12  justify-content-center" >
                                
                                {{ form_widget(form.reset, {'label': 'Effacer','attr': {'class': 'btn btn-warning'}} ) }}
                                {{ form_widget(form.submit, {'label': 'Connexion','attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                    
                        {{ form_rest(form) }}
                    
                        
                        {{ form_end(form) }}
                      
                    </div>
                </div>
            </div>
        </div>
        
    </div>
{% endblock body %}

