{% extends 'base.html.twig' %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock title %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock header %}

    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-sm-5">
                <div class="col-sm-12 col-lg-12">
                    <h3 class="text-center">Veuillez vous connecter</h3>

                    <div class="form-group">
                        <form class="form-horizontal" role="form" method="POST" action="{{ path('security_login') }}" novalidate="novalidate">
                                        
                            
                        <div class="form-group col-sm-12">
                            {{ form_label(form.username, "Votre pseudo :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_widget(form.username, name="username", value="{{ username }}", {'attr': {'class': 'form-control'}}) }}
                               
                            </div>
                        </div>
                        
                        <div class="form-group col-sm-12">
                                
                            {{ form_label(form.password, "Votre mot de passe :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                
                            </div>
                        </div>
                        
                        <div class="form-group col-sm-12">
                            <div class="row col-sm-12  justify-content-center" >
                                
                                <button type="reset" class="btn btn-warning">Effacer</button>
                                <button type="submit" class="btn btn-success">Connexion <span class="fa fa-lock"></span></button>
                                
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        
                       
                        {{ form_end(form) }}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock body %}

