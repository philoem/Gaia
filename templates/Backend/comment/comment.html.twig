{% extends 'base.html.twig' %}

{% block title %}
    Message - {{ parent() }}
{% endblock title %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="../../../main.css" />
{% endblock stylesheets %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock header %}

    <div class="container">
        {# Formulaire de création de commentaire #}
        <div class="row justify-content-center" id="form_comment">
            <div class="form-group col-sm-5" id="form_shadow_comment">
                <div class="col-sm-12 col-lg-12">
                    <h3 class="text-center">Laissez votre message à <em>"{{ username|capitalize }}"</em></h3>
                    <div class="form-group">
                    {{ form_start(formComment)}}
        
                    <div class="form-group">
                        <div class="row justify-content-center">
                            <div class="col-sm-10 col-lg-10">
                                
                                {{ form_label(formComment.name, 'Votre nom :') }}
                                {{ form_widget(formComment.name, {'attr': {'placeholder': 'Votre titre'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row justify-content-center">
                            <div class="col-sm-10 col-lg-10">
                                {{ form_label(formComment.commentary, 'Votre message :') }}
                                {{ form_widget(formComment.commentary, {'attr': {'placeholder': 'Tapez ici votre message'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <div class="row col-sm-12  justify-content-center" >
                            
                            <button type="reset" class="btn btn-warning">Effacer</button>
                            <button type="submit" class="btn btn-success">Envoyer votre message</button>
                            
                        </div>
                    </div>
                    {{ form_end(formComment) }}
                </div>
            </div>
        </div>
        {# Message de confirmation d'inscription #}
        <div class="container">
            <div class="row justify-content-center">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        <h1>{{ message }}</h1>
                        <div class="row justify-content-center">
                            <a href="{{ path('adverts_index') }}" title="Connexion" id="return_home">Allez voir vos annonces</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock body %}