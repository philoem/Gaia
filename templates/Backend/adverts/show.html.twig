{% extends 'base.html.twig' %}

{% block title %}Annonces - {{ parent()}}{% endblock %}

{% block stylesheets %}  {{ parent() }} {% endblock stylesheets %}

{% block body %}
{% block header %} {{ parent() }} {% endblock header %}
<div class="container">    
<h1>Annonce</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N° de l'annonce</th>
                <td>{{ advert.idAdvert }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ advert.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advert.content }}</td>
            </tr>
            <tr>
                <th>Prix en euros</th>
                <td>{{ advert.price }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ advert.dateAdverts ? advert.dateAdverts|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ advert.picturesAdverts }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('adverts_index') }}">Retour à la liste des annonces /</a>

    <a href="{{ path('adverts_edit', {'idAdvert': advert.idAdvert}) }}">Modification</a>

    {{ include('Backend/adverts/_delete_form.html.twig') }}

</div>
{% endblock body %}