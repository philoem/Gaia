{% extends 'base.html.twig' %}

{% block title %}
    Membres - {{ parent() }}
{% endblock title %}

{% block stylesheets %}
{{ parent() }}
{% endblock stylesheets %}

{% block body %}

{% block header %}
    {{ parent() }}
{% endblock header %}

{# Ici la carte #}
<div class="container-fluid">
    <div class="col align-self-center">
        <h2 id="title_map" class="row justify-content-center">
            Membres actifs
        </h2>
    </div>
    <div id="map"></div>

    {# Ici listing des membres #}
    <div id="addresses">
        <ul>
            {% for adresse in addresses %}
            <li class="address"><span class="address_user">{{ adresse.username }}</span> <span class="address_lat">{{ adresse.lat }}</span>  <span class="address_lng">{{ adresse.lng }}</span></li>
            {% endfor %}
        </ul>
    </div>
    {# Ici le membre connectÃ© #}
    <div id="addresse">
        <ul>
            <li class="adress"><span class="adress_user">{{ adress.username }}</span> <span class="adress_lat">{{ adress.lat }}</span>  <span class="adress_lng">{{ adress.lng }}</span></li>
        </ul>
    </div>
</div>
    

{% block javascripts %}
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
crossorigin=""></script>
<script type = "text/javascript" src = "http://maps.stamen.com/js/tile.stamen.js?v1.3.0"></script> 
<script src="{{ asset('js/Map.js') }}"></script>
{% endblock javascripts %}


{% endblock body %}
