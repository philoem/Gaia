{% extends 'base.html.twig' %}

{% block title %}
    Inscription - {{ parent() }}
{% endblock title %}

{% block body %}
    <div class="container">
        {% block header %}
            {{ parent() }}
        {% endblock header %}
        
        <div class="form-group">
            <div class="col-sm-12 col-lg-12">
                <h3 class="text-center">Formulaire d'inscription</h3>

                <div class="form-group">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate':'novalidate'}}) }}
                                    
                
                    {# Génération manuelle et éclatée : #}
                    <div class="form-group">
                        {# Génération du label. #}
                        {{ form_label(form.firstname, "Votre prénom :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                    
                    
                        <div class="col-sm-12">
                            {# Génération de l'input. #}
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                
                    {# Idem pour un autre champ. #}
                    <div class="form-group">
                        {{ form_label(form.lastname, "Votre nom :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                        <div class="col-sm-12">
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                            {{ form_label(form.username, "Votre pseudo :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                        <div class="col-sm-12">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            
                        </div>
                    </div>

                    <div class="form-group">
                            {{ form_label(form.mail, "Votre mail :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                        <div class="col-sm-12">
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                            {{ form_label(form.password.first, "Votre mot de passe :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                        <div class="col-sm-12">
                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.second, "Retaper votre mot de passe :", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                    <div class="col-sm-12">
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="row col-sm-12  justify-content-center">
                        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                        <button type="submit" class="btn btn-primary"><span style="color: white" class="fas fa-check fa-2x"> </span>Validez votre inscription </button>
                        
                    </div>
                    
                </div>
                {# Génération automatique des champs pas encore écrits.
                    Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                    et tous les champs cachés (type « hidden »). #}
                   
                
                    {# Fermeture de la balise <form> du formulaire HTML #}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
    </div>
{% endblock body %}